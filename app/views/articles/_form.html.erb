 




 <%= render 'shared/errors', obj: @article %>

<div class="form-horizontal"
  <div class='row'>
   <div class='col-xs-12'>
<%= form_with(model: article, local: true) do |form| %>

<div class="form-group">
<div class="control-label col-sm-2">
    <%= form.label :title %>

    </div>
    <div class="col-sm-8">
    <%= form.text_field :title,id: "title", class: "form-control", placeholder: "please type your article title", autofocus: true%>
    </div>
  </div> 
  

  <div class="form-group">
<div class="control-label col-sm-2">
    <%= form.label :description %>
    </div>
    <div class="col-sm-8">
    <%= form.text_area :description,rows: 10 ,class: "form-control", placeholder: "please type your article", autofocus: true %>
  </div>
  </div>

  <div class="form-group">
<div class="col-sm-offset-2 col-sm-10">
    <%= form.submit class: 'btn btn-primary btn-lg' %>
  </div>
  </div>
  </div>
  </div>
<% end %>
